---
import BaseLayout from '../../layouts/BaseLayout.astro';
---
<BaseLayout title="COVID-19 Vaccination &#124; Christian Jabasa">
  <div class="flex flex-col pb-16">
    <div class="hero-container-row px-6">
      <div class="hero-container">
        <h1 class="hero-title">COVID-19 Vaccination</h1>

        <h4 class="hero-subtitle">Has Christian Luck G. Jabasa gotten his shots yet?</h4>
      </div>
    </div>

    <div class="flex flex-row px-6">
      <div class="vaccination-hero-container-row">
        <div class="flex flex-col text-center leading-tight">
          <h1 class="vaccination-hero-title">3/3</h1>
        </div>
      </div>
    </div>

    <div class="flex flex-row justify-center px-6 mb-6">
      <div class="w-full md:w-7/12 2xl:w-6/12 flex flex-col">
        <div class="flex flex-row mb-6">
          <h2 class="text-4xl font-bold">Timeline</h2>
        </div>

        <ul class="list-disc space-y-4 pl-4">
          <li>
            <div class="flex flex-col">
              <h3 class="text-xl"><span class="vaccine-brand-span">Sinovac</span>
                - 13 August, 2021 (12:52 PM)
              </h3>
              <h5 class="text-gray-500 text-sm font-semibold">1st Shot</h5>
            </div>
          </li>

          <li>
            <div class="flex flex-col">
              <h3 class="text-xl">
                <span class="vaccine-brand-span">Sinovac</span>
                - 10 September, 2021 (11:03 AM)
              </h3>
              <h5 class="text-gray-500 text-sm font-semibold">2nd Shot</h5>
            </div>
          </li>

          <li>
            <div class="flex flex-col">
              <h3 class="text-xl">
                <span class="vaccine-brand-span">AstraZeneca</span>
                - 14 January, 2022 (11:14 AM)
              </h3>
              <h5 class="text-gray-500 text-sm font-semibold">Booster</h5>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
.vaccination-hero-container-row {
  @apply bg-green-500 flex flex-row w-full justify-center rounded-md shadow-md py-8 my-8 mb-14;
}

.vaccination-hero-title {
  font-size: 192px;
  margin-bottom: -24px;
  @apply text-white font-black;
}

.vaccine-brand-span {
  @apply font-bold;
}
</style>
