---
import BaseLayout from '../../layouts/BaseLayout.astro';

const blogPostsRaw = Astro.fetchContent('./*.md');
const blogPosts = blogPostsRaw.sort((a, b) => new Date(b.publishDate) - new Date(a.publishDate));
---
<BaseLayout title="Christian Jabasa's Blog | Christian Jabasa">
  <div class="flex flex-col pb-16">
    <div class="hero-container-row px-6 mb-6">
      <div class="hero-container">
        <h1 class="hero-title">Christian Jabasa's Blog</h1>

        <h4 class="hero-subtitle">It ain't much but it's honest work.</h4>
      </div>
    </div>

    <div class="flex flex-row justify-center">
      <div class="w-full lg:w-7/12 flex flex-col space-y-16 px-6">
        {blogPosts.map(blogPost => (
          <a href={`/blog${blogPost.url}`}>
            <div>
              <div class="mb-6">
                <img src={blogPost.heroImage} alt="" class="rounded-md shadow-md">
              </div>

              <div>
                <h2 class="text-3xl lg:text-4xl font-bold mb-3">{blogPost.title}</h2>
                <h5 class="text-lg">{blogPost.description}</h5>
              </div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
.hero-container-row {
  @apply flex flex-row py-8;
}

.hero-container {
  @apply w-full md:w-7/12 lg:w-7/12 xl:w-7/12 2xl:w-7/12 flex flex-col;
}

.hero-title {
  @apply text-4xl md:text-5xl lg:text-6xl xl:text-6xl 2xl:text-6xl font-black mb-4;
}

.hero-subtitle {
  @apply text-lg md:text-lg lg:text-xl xl:text-xl 2xl:text-xl;
}
</style>
