---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Counter from '../../components/Counter.jsx';
---
<BaseLayout title="Counter Demo &#124; Christian Jabasa">
  <div class="flex flex-col">
    <div class="hero-container-row px-6">
      <div class="hero-container">
        <h1 class="hero-title">Counter Demo</h1>

        <h4 class="hero-subtitle">React component inside Astro.</h4>
      </div>
    </div>

    <div class="flex flex-row px-6">
      <div class="flex flex-col">
        <Counter client:visible />
      </div>
    </div>
  </div>
</BaseLayout>

<style>
.hero-container-row {
  @apply flex flex-row py-8;
}

.hero-container {
  @apply w-full md:w-7/12 lg:w-7/12 xl:w-7/12 2xl:w-7/12 flex flex-col;
}

.hero-title {
  @apply text-4xl md:text-5xl lg:text-6xl xl:text-6xl 2xl:text-6xl font-black mb-4;
}

.hero-subtitle {
  @apply text-lg md:text-lg lg:text-xl xl:text-xl 2xl:text-xl;
}
</style>
