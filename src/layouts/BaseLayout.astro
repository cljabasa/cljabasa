---
import AppBar from '../components/AppBar.astro';

const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{title}</title>

    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/style/global.css">
    <link rel="stylesheet" href="/style/markdown-content.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
      href="https://fonts.googleapis.com/css2?family=Work+Sans:wght@300;400;500;600;700;800;900&display=swap"
      rel="stylesheet"
    >
  </head>

  <body>
    <header>
      <div class="container mx-auto">
        <AppBar />
      </div>
    </header>

    <main class="container mx-auto slot-container">
      <slot />
    </main>

    <div class="footer-container">
      <div class="flex flex-row justify-center py-4">
        <h5 class="text-white text-sm font-medium">
          {'Made with <3 in Bacolod City, PH'}
        </h5>
      </div>
    </div>
  </body>
</html>

<style>
  .slot-container {
    min-height: calc(100vh - 64px);
  }

  .hero-container-row {
    @apply flex flex-row py-8;
  }

  .hero-container {
    @apply w-full md:w-7/12 lg:w-7/12 xl:w-7/12 2xl:w-7/12 flex flex-col;
  }

  .hero-title {
    @apply text-4xl md:text-5xl lg:text-6xl xl:text-6xl 2xl:text-6xl font-black mb-4;
  }

  .hero-subtitle {
    @apply text-lg md:text-lg lg:text-xl xl:text-xl 2xl:text-xl;
  }

  .footer-container {
    @apply bg-gray-900 flex flex-col;
  }
</style>
